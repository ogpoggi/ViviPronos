<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pronos_item"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="374dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="143dp">

            <TextView
                android:id="@+id/textViewEquipe1"
                android:layout_width="131dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Bastien Poggi"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                app:layout_constraintBottom_toTopOf="@+id/textViewCote1"
                app:layout_constraintEnd_toStartOf="@+id/textViewEquipe2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewEquipe2"
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="Bastien Poggi"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                app:layout_constraintEnd_toStartOf="@+id/btn_select_pronos"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewCote1"
                android:layout_width="64dp"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="Bastien POGGI"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewCoteNull"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textViewCote2"
                android:layout_width="57dp"
                android:layout_height="19dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="72dp"
                android:layout_marginTop="8dp"
                android:text="Bastien POGGI"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewEquipe2"
                app:layout_constraintVertical_bias="0.8" />

            <TextView
                android:id="@+id/textViewCoteNull"
                android:layout_width="51dp"
                android:layout_height="21dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="8dp"
                android:text="Bastien POGGI"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewCote2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_select_pronos"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                android:text="+"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>